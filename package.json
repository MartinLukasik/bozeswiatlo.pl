{
  "name": "bozeswiatlo.pl",
  "version": "0.1.0",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/bozeswiatlo-devteam/bozeswiatlo.pl"
  },
  "license": "MIT",
  "devDependencies": {
    "cssnano": "^4.1.10",
    "gulp": "^4.0.2",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.25.0"
  },
  "dependencies": {
    "aos": "^2.3.4",
    "imagemin": "^7.0.1",
    "imagemin-webp": "^5.1.0",
    "lg-thumbnail.js": "^1.1.0",
    "lightgallery.js": "^1.1.3",
    "lodash.debounce": "^4.0.8"
  },
  "scripts": {
    "dev": "parcel index.html --no-hmr",
    "devopen": "parcel index.html --no-hmr --open",
    "build": "parcel build index.html --out-dir ./build",
    "deploy-build": "parcel build index.html --out-dir ~/Desktop/bozeswiatlo-api/public",
    "convert-jpg": "find ./img -type f -name '*.jpg' | xargs -P 8 -I {} sh -c 'cwebp -q 95 $1 -o \"${1%.jpg}.webp\"' _ {} \\;",
    "convert-png": "find ./img -type f -name '*.png' | xargs -P 8 -I {} sh -c 'cwebp -q 95 $1 -o \"${1%.png}.webp\"' _ {} \\;"
  }
}
